//JOGO DO NUMERO SECRETO
// Para continuar com jogando até acertar o número secreto será utilizado a condição ENQUANTO.

alert('Boas vindas ao jogo do número secreto');
let numeroSecreto = 3;
console.log(numeroSecreto);
let chute; 
let tentativas;

// CONDIÇÃO PARA JOGANDO DANDO CONTINUIDADE ENQUANTO NÃO ACERTA O NÚMERO.
while (chute != numeroSecreto){
    chute = prompt('Escolha um número entre 1 e 10');

    // se chute for igual ao número secreto
    if (chute == numeroSecreto) {
        alert(`Isso ai! Você descobriu o número secreto ${numeroSecreto} com ${tentativas} tentativas`);
    } else {
        //alert('Você errou :(')
        if (chute > numeroSecreto){
            alert(`O número secreto é menor que ${chute}`);
        } else{
            alert(`O número é maior que ${chute}`);
        }

        // ALGORITMOS PARA SABER A QUANTIDADES DE TENTATIVAS e CONTINUA COM DENTRO DO WHILE
    // 1º cria-se uma variável chamada tentativas
    // 2º inserir o comando abaixos. Tem duas formas
    // 3º inserir a variável tentativas no alert da linha 12 para exebir a quantidade quando for acertado o número secreto.

    //tentativas = tentativas + 1;
    tentativas++;
    }

}
