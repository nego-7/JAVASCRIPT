// CRIANDO UM JOGO DO NUMERO SECRETO EM JS

alert('Boas vindas ao jogo do número secreto'); // alert serve para imprimir texto na tela
let numeroSecreto = 5; // let serve para criar uma variável
console.log(numeroSecreto); // Console serve para mostrar o resultado para o desenvolver e NUMEROSECRETO DENTRO DE ( ) serve para recohecer que é uma variável e não um texto  caso esteja dentro de " "
let chute = prompt('Escolha um número entre 1 e 10');

if (chute == numeroSecreto) { // If é uma condicional
    console.log('Isso ai! Você descobriu o número secreto (5)'); // Console é para exibir informações no navegador ou ambiente de desenvolvimento e não ao usuário
} else { // Else serve para criar uma condinção caso a primeira não atenda
    //alert("você errou :(")
    alert("o número secreto era " + numeroSecreto + " , mas você escolheu "  +  chute);
}
